<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hachathon1.StartPage">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Button x:Name="PilgrimButton" Text="I am a Pligrim" TextColor="Blue" BackgroundColor="White"
                        HorizontalOptions="FillAndExpand" VerticalOptions="Center" BorderRadius="50" BorderColor="Blue" BorderWidth="1" />
            <Button x:Name="VolunterButton" Text="I am a volunteer" TextColor="Blue" BackgroundColor="White"
                        HorizontalOptions="FillAndExpand" VerticalOptions="Center" BorderRadius="50"  BorderColor="Blue" BorderWidth="1"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>